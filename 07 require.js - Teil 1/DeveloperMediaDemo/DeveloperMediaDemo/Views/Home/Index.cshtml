@section scripts  {
<script>

    require(['app/indexPage'], function (i) {
        i.init(); 
    });

</script>
}

<div id="index_template">

    <h1 data-bind="text: header"></h1>
    
    <p>
        <a data-bind="click: createNote">Create New</a>
    </p>

    <div data-bind="foreach: notes">
        
        <div class="drop_shadow postit" data-bind="choseCategoryColor: Categories">
            
            <a class="deleteLink" data-bind="click: $root.deleteNote">x</a>

            <div class="sexy_date">
                <h1 class="day" data-bind="dateText: Added, datePattern: 'dd'"></h1> 
                <h1 class="month" data-bind="dateText: Added, datePattern: 'MMM'"></h1> 
                <h1 class="year" data-bind="dateText: Added, datePattern: 'yyyy'"></h1>
            </div>

            <h2 data-bind="text: Title"></h2>
            <p data-bind="text: Message" class="message"></p>
            
            <a data-bind="click: $root.goToDetails">Details</a>
            
        </div> 
    </div>
</div>
